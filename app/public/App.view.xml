<mvc:View
	controllerName="DCET.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<App id="app">
		<Page title="Data Conversion Error Tool" enableScrolling="false">
			<Panel class="sapUiResponsiveMargin" width="auto">
				<FlexBox alignItems="Center" justifyContent="SpaceBetween">
					<Title text="Upload file to get started!" class="sapUiTinyMarginEnd"/>
					<Button text="Upload File..." press=".onPress" type="Emphasized" class="sapUiSmallMargin"/>
				</FlexBox>
			</Panel>
		</Page>
	</App>
</mvc:View>